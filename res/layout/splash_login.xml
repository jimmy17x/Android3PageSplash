<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#000000"
		android:gravity="center"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/tv_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="Game of Thrones \n Podcast"
			android:textColor="#26A899"
			android:textSize="25dip" />
		<View
			android:layout_width="fill_parent"
			android:layout_height="2dp"
			android:layout_margin="5dip"
			android:background="#6c1636" />
		<TextView
			android:id="@+id/tv_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:text="Username"
			android:textColor="#E8D661"
			android:textSize="30dip" />
		<EditText
			android:id="@+id/et_username"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/login_edit_text"
			android:ems="10"
			android:inputType="textPersonName"
			android:textColor="@drawable/click_text_color"
			android:textColorHint="@drawable/click_text_color"
			android:textCursorDrawable="@drawable/color_cursor" >
		</EditText>
		<TextView
			android:id="@+id/tv_password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:text="Password"
			android:textColor="#E8D661"
			android:textSize="30dip" />
		<EditText
			android:id="@+id/et_password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/login_edit_text"
			android:ems="10"
			android:inputType="textPassword"
			android:textColor="@drawable/click_text_color"
			android:textColorHint="@drawable/click_text_color"
			android:textCursorDrawable="@drawable/color_cursor" >
		</EditText>
		<Button
			android:id="@+id/btn_login"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dip"
			android:background="@drawable/login_button"
			android:text="Sign in"
			android:textColor="@drawable/click_text_color" />
		<TextView
			android:id="@+id/tv_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Or"
			android:textColor="#1D78F7"
			android:textSize="25dp" />
		<Button
			android:id="@+id/btn_signup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/login_button"
			android:text="Sign Up"
			android:textColor="@drawable/click_text_color" />
	</LinearLayout>
</ScrollView>